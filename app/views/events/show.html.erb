<div class="card">
  <div class="card-header col">
    <h1><%= @event.title %></h1>
    <p class="text-muted">Event Created by <%= User.find(@event.creator_id).name %></p>
    <p class="text-muted">@ <%= @event.date.strftime("%B %-d, %Y at %l:%M %p") %></p>
    <p class="text-muted">Location: <%= @event.location %></p>
  </div>
  <div class="card-body">
    <p class="card-text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Similique nam dignissimos ratione consectetur corporis eos natus ea ipsa et quam maiores, hic repellat itaque dolorem dolore odit ex iure temporibus.</p>
    <div class>
      <% if current_user == @event.creator %>
        <%= link_to 'Edit', edit_event_path, class: "btn btn-primary" %>
        <%= link_to 'Delete', event_path, method: :delete, class: "btn btn-primary",
                              data: { confirm: "Are you sure you want to delete this event?"} %>
      <% elsif @event.attendees.include?(current_user) %>
        <%= link_to 'Cancel Invite', cancel_invitation_event_path, class: "btn btn-primary" %>
      <% else %>
        <%= link_to 'Join Event', accept_invitation_event_path, class: "btn btn-primary" unless @event.date < Time.now %>
      <% end %>
    </div>
  </div>
</div>
